# MongoDB Connection String (required)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nonnacluster

# NextAuth Secret for authentication (required)
# Run `openssl rand -base64 32` to generate a key
NEXTAUTH_SECRET=your_random_secret_key_here

# Default admin credentials for initial setup
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password_to_change_after_setup
ADMIN_EMAIL=admin@example.com

# Site URL for production (optional, used in emails and absolute links)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Vercel specific variables (added automatically in Vercel deployments)
# VERCEL_URL
# NEXT_PUBLIC_VERCEL_URL

# API timeout in milliseconds (optional)
API_TIMEOUT=30000
